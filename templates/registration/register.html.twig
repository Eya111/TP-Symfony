{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="mb-4">Cr√©er un compte</h1>

            {{ form_start(registrationForm) }}
                <div class="card shadow-sm p-4">
                    {{ form_row(registrationForm.name, { 'label': 'Nom complet' }) }}
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword, { 'label': 'Mot de passe' }) }}
                    {{ form_row(registrationForm.roles, { 'label': 'Je m\'inscris en tant que :' }) }}

                    <button type="submit" class="btn btn-primary btn-lg w-100 mt-4">
                        S'inscrire
                    </button>
                </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
</div>
{% endblock %}