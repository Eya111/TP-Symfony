{% extends 'base.html.twig' %}

{% block title %}Filtrer les Voitures par Modèle{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="text-center mb-4">Filtrer les Voitures par Modèle</h1>

        {# 1. AFFICHAGE DU FORMULAIRE DE FILTRAGE #}
        <div class="row justify-content-center mb-5">
            <div class="col-md-6">
                {{ form_start(form, {'attr': {'class': 'd-flex align-items-end'}}) }}
                <div class="flex-grow-1 me-3">
                    {# Affichage du champ 'modele' du formulaire #}
                    {{ form_row(form.modele, {'label': 'Sélectionner un Modèle'}) }}
                </div>
                <div>
                    {# Affichage du bouton 'filtrer' #}
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-filter"></i> {{ form_widget(form.filtrer) }}
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>

        {# 2. AFFICHAGE DES RÉSULTATS #}
        {% if voitures is defined and voitures is not empty %}
            <h2 class="text-center mb-3">Résultats pour le Modèle sélectionné</h2>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Série</th>
                        <th>Date de Mise en Marche</th>
                        <th>Modèle</th>
                        <th>Pays d'Origine</th>
                        <th>Prix Jour (en €)</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for voiture in voitures %}
                        <tr>
                            <td>{{ voiture.serie }}</td>
                            <td>{{ voiture.dateMiseEnMarche|date('Y-m-d') }}</td>
                            <td>{{ voiture.modele.libelle }}</td>
                            <td>{{ voiture.modele.pays }}</td>
                            <td>{{ voiture.prixJour|number_format(2, ',', ' ') }} €</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% elseif form.isSubmitted %}
            <div class="alert alert-warning text-center" role="alert">
                Aucune voiture trouvée pour le modèle sélectionné.
            </div>
        {% else %}
            <div class="alert alert-info text-center" role="alert">
                Veuillez sélectionner un modèle ci-dessus pour afficher les voitures associées.
            </div>
        {% endif %}

    </div>


{% endblock %}