        <a href="{{ path('voitures_list') }}">Liste des voitures</a> |
        <a href="{{ path('voiture_add') }}">Ajouter une voiture</a>
    </nav>
    <hr>
</header>

<main>
    {% block body %}{% endblock %}
</main>

<footer>
    <hr>
    <p>&copy; 2025 Mon TP Symfony</p>
</footer>

</body>
</html>
